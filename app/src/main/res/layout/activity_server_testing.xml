<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.philipp.timesup.ServerTesting">


    <Button
        android:id="@+id/button_create_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="81dp"
        android:text="New Game" />

    <Button
        android:id="@+id/button_join_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_create_game"
        android:layout_centerHorizontal="true"
        android:text="Join Game" />

    <Button
        android:id="@+id/button_join_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_join_game"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/button_join_game"
        android:text="Join Team" />

    <Button
        android:id="@+id/button_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_unready"
        android:layout_alignBottom="@+id/button_unready"
        android:layout_alignStart="@+id/button_create_game"
        android:text="Ready" />

    <Button
        android:id="@+id/button_unready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_join_team"
        android:layout_below="@+id/button_join_team"
        android:layout_marginTop="31dp"
        android:text="unready" />

    <Button
        android:id="@+id/button_next_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_round_finished"
        android:layout_alignBottom="@+id/button_round_finished"
        android:layout_alignEnd="@+id/button_unready"
        android:text="Next Round" />

    <Button
        android:id="@+id/button_round_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button_ready"
        android:layout_below="@+id/button_ready"
        android:layout_marginTop="52dp"
        android:text="Round finished" />
</RelativeLayout>
