<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.philipp.timesup.GameActivity">



    <TextView
        android:id="@+id/wordToGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20sp"
        android:text="ChÃ¤tzli"
        android:textSize="50sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/discipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/wordToGuess"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:text="Explain this Word"
        android:textSize="25sp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@id/wordToGuess"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/guessInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Guess the word"
        android:textSize="50sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/watchInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="It's not your turn"
        android:textSize="50sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/discipline"
        android:layout_marginBottom="20sp"
        android:textSize="50sp"

        />


</RelativeLayout>
